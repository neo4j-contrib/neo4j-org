<% include head %>
<div class="container">
<!-- Main hero unit for a primary marketing message or call to action -->
<div id="download" class="hero-unit path">
    <h1><i class="icon icon-download-alt"></i> Install Neo4j</h1>

    <p class="lead">Take Neo4j for a spin. Community, Advanced, and Enterprise are available for your exploration.</p>
</div>
<div class="row-fluid">
<div class="span3 sidebar">
    <div class="summary">
   
    <h2>Next Steps</h2>

        <div class="well">
            <h5>After Download</h5>
            <ul class="circle">
                <li><a href="#install">Installation Video</a></li>
                <li><a href="/learn/graphdatabase">Graph Introduction</a></li>
                <li><a href="/use">Learn to Build Apps</a></li>
                <li><a href="/participate">Get Help</a></li>
                <li><a href="http://docs.neo4j.org/chunked/stable/server-installation.html" target="_blank">Detailed Installation
                    Instructions</a></li>
            </ul>
            <h5>Upgrading?</h5>

            <p>Read <a href="http://docs.neo4j.org/chunked/milestone/deployment-upgrading.html" target="_blank">Upgrading
                Docs</a></p>
        </div>
    </div>

</div>
<div class="span9">
<table class="table table-striped table-download table-bordered table-green">
    <thead>
    <tr>
        <th class="database" colspan=3><h2>Neo4j Server Download</h2></th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th class="ltgrey" rowspan=2><p class="text18">Milestone Release<br/>
            <%= neo4j.version %></p>

            <p class="date"><%= neo4j.date %></p>
            <% if (neo4j.readme) { %>
            <a href="<%= neo4j.readme %>" class="btn" type="button">Read Me</a></th>
            <% } %>
        <td class="os"><h3>Linux/Mac</h3></td>
        <% var platform = "unix" %>
        <% var version = neo4j.version %>
        <% include download/_download %>
    </tr>
    <tr>
        <td class="os"><h3>Windows</h3></td>
        <% var platform = "windows" %>
        <% var version = neo4j.version %>
        <% include download/_download %>
    </tr>
    <tr>
        <th class="ltgrey" rowspan=2><p class="text18">Major Stable Version<br/>
            <%= neo4jGA.version %></p>

            <p class="date"><%= neo4jGA.date %></p>
            <% if (neo4jGA.readme) { %>
                <a href="<%= neo4jGA.readme %>" class="btn" type="button">Read Me</a></th>
            <% } %>
        <td class="os"><h3>Linux/Mac</h3></td>
        <% var platform = "unix" %>
        <% var version = neo4jGA.version %>
        <% include download/_download %>
    </tr>
    <tr>
        <td><h3>Windows</h3></td>
        <% var platform = "windows" %>
        <% var version = neo4jGA.version %>
        <% include download/_download %>
    </tr>
    </tbody>
</table>
*<span id="note">Advanced and Enterprise Editions require registration. For details on Neo4j editions, please see <a href="/learn/licensing">Licensing Guide</a>.</span>
<h3>Installing Neo4j</h3>
<% include download/installation %>
<div class="installation">
    <h3>Maven</h3>

    <% include download/_embedded_dependency %>
</div>

<div class="installation">
    <h3>Debian - stable (<%= neo4jGA.version %>)</h3>

    <% include download/debian %>
</div>
<div class="installation">
    <h3>MacOS X - Homebrew - stable (<%= neo4jGA.version %>)</h3>
	<p>If you have <a href="http://mxcl.github.com/homebrew/">homebrew</a> installed, adding Neo4j to your Mac is simple a:</p>
    <pre>brew update && brew install neo4j
neo4j start</pre>
</div>
<!-- Archives -->
<div class="accordion archives" id="accordion1">
    <div class="accordion-group">
        <div class="accordion-heading"><a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1"
                                          href="#collapseOne"><h2>Other Neo4j Versions<i
                class="icon icon-archives icon-caret-down"></i></h2>
        </a></div>
        <div id="collapseOne" class="accordion-body collapse">
            <div class="accordion-inner">
                <div class="row grid-gray">&nbsp;<br/>

                    <div class="span5">
                        <table class="table table-striped table-download table-bordered table-green">
                            <thead>
                            <tr>
                                <th class="database" colspan=3><h2>Linux/Mac</h2></th>
                                <% var platform = "unix" %>
                            </tr>
                            </thead>
                            <tbody>
                            <% var version = versions.old_stable %>
                            <% var version_date = versions.old_stable_date %>
                            <% include download/_download_other %>
                            
                            <% var version = versions.older_stable %>
                            <% var version_date = versions.older_stable_date %>
                            <% include download/_download_other %>
                            
                            <% var version = versions.oldest_stable %>
                            <% var version_date = versions.oldest_stable_date %>
                            <% include download/_download_other %>
                            
                            <% var version = neo4jS.version %>
                            <% var version_date = neo4jS.date %>
                            <% include download/_download_other %>
                            </tbody>
                        </table>
                    </div>
                    <div class="span5">
                        <table class="table table-striped table-download table-bordered table-green">
                            <thead>
                            <tr>
                                <th class="database" colspan=3><h2>Windows</h2></th>
                                <% var platform = "windows" %>
                            </tr>
                            </thead>
                            <tbody>
                            <% var version = versions.old_stable %>
                            <% var version_date = versions.old_stable_date %>
                            <% include download/_download_other %>
                            
                            <% var version = versions.older_stable %>
                            <% var version_date = versions.older_stable_date %>
                            <% include download/_download_other %>
                            
                            <% var version = versions.oldest_stable %>
                            <% var version_date = versions.oldest_stable_date %>
                            <% include download/_download_other %>
                            
                            <% var version = neo4jS.version %>
                            <% var version_date = neo4jS.date %>
                            <% include download/_download_other %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

</div>
<script type='text/javascript'>//<![CDATA[
$(window).load(function () {

    $(".accordion-toggle").click(function () {

        $(".icon-archives").toggleClass("icon-caret-up");
        $(".icon-archives").toggleClass("icon-caret-down");

    });

});//]]>  

</script>
<% include foot %>
